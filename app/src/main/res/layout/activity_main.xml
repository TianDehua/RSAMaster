<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.tian.rsamaster.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成的RSA公钥" />

        <TextView
            android:id="@+id/tv_rsa_public_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="生成的RSA私钥" />

        <TextView
            android:id="@+id/tv_rsa_private_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_gen_rsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="生成一对RSA公私钥" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="--------------分割线---------------" />

        <EditText
            android:id="@+id/et_encode_by_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="加密的字段"
            android:text="This is encode source string" />

        <Button
            android:id="@+id/bt_encode_by_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用公钥加密" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加密结果" />

        <TextView
            android:id="@+id/tv_encode_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_decode_by_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用私钥解密" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解密结果" />

        <TextView
            android:id="@+id/tv_decode_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="--------------分割线---------------" />

        <Button
            android:id="@+id/bt_encode_by_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用私钥加密" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加密结果" />

        <TextView
            android:id="@+id/tv_encode_private_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_decode_by_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用公钥解密" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解密结果" />

        <TextView
            android:id="@+id/tv_decode_public_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="--------------分割线---------------" />

        <Button
            android:id="@+id/bt_sign_by_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用私钥签名" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="签名结果" />

        <TextView
            android:id="@+id/tv_sign_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_docheck_by_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用公钥解密" />
    </LinearLayout>
</ScrollView>
